        <treewalk-parent-pom.releaseRepositoryId>treewalk-repository</treewalk-parent-pom.releaseRepositoryId>
        <treewalk-parent-pom.releaseRepositoryUrl>dav:http://repository.intranet.treewalk.com/libs-releases</treewalk-parent-pom.releaseRepositoryUrl>

        <treewalk-parent-pom.snapshotRepositoryId>treewalk-repository</treewalk-parent-pom.snapshotRepositoryId>
        <treewalk-parent-pom.snapshotRepositoryUrl>dav:http://repository.intranet.treewalk.com/libs-snapshots</treewalk-parent-pom.snapshotRepositoryUrl>

        <treewalk-parent-pom.siteRepositoryId>treewalk-site</treewalk-parent-pom.siteRepositoryId>
        <treewalk-parent-pom.siteRepositoryUrl>scp://sites.intranet.treewalk.com/var/www</treewalk-parent-pom.siteRepositoryUrl>

        <!-- Treewalk projects information (do not overwrite) -->
