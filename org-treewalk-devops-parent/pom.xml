        <treewalk-parent-pom.organizationUrl>http://www.treewalk.com</treewalk-parent-pom.organizationUrl>
        <treewalk-parent-pom.siteUrl>http://sites.intranet.treewalk.com</treewalk-parent-pom.siteUrl>

        <treewalk-parent-pom.ciManagementUrl>http://bamboo.intranet.treewalk.com/</treewalk-parent-pom.ciManagementUrl>
        <treewalk-parent-pom.issueManagementUrl>http://jira.intranet.treewalk.com/</treewalk-parent-pom.issueManagementUrl>

