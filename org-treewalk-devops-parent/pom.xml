        <treewalk-parent-pom.checkstyleUrl><![CDATA[${treewalk-parent-pom.sonarUrl}/profiles/export?name=${treewalk-parent-pom.sonarProfile}&language=${sonar.language}&format=checkstyle]]></treewalk-parent-pom.checkstyleUrl>
